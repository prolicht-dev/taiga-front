tg-lightbox-close
form
    h2.title(translate="COMMON.US_MOVE")

    fieldset.description 
        span.description {{descriptionText}}

    fieldset.project-selector
        label(
            translate="USERSTORY.CHOOSE_TARGET_PROJECT"
            for="project-selector-dropdown"
        )
        select(
            ng-model="selectedProject"
            ng-change="selectProject(selectedProject)"
            data-required="true"
            ng-options="p.id as p.name for p in projects | toMutable"
            id="project-selector-dropdown"
        )

    fieldset.status-display
        textarea.status-text(
            ng-attr-placeholder="{{'COMMON.STATUS_TEXT' | translate}}"
            ng-readonly="true"
            ng-model="statusText"
        )

    .lb-action-wrapper
        button.btn-small.js-us-move-button(
            ng-disabled="!valid"
            variant="primary"
            type="submit",
            title="{{'COMMON.MOVE' | translate}}",
            translate="COMMON.MOVE"
        )
    .lb-action-wrapper
        button.btn-small.js-us-copy-button(
            ng-disabled="!valid"
            variant="primary"
            type="button",
            title="{{'COMMON.COPY' | translate}}",
            translate="COMMON.COPY"
        )
